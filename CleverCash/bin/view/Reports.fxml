<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.ReportsController"
            prefWidth="1210" prefHeight="745">
    <VBox spacing="20" layoutX="80.0" layoutY="13.0" prefWidth="1050.0" prefHeight="700.0">
        <!-- Top section with two combo boxes -->
        <HBox spacing="25">
            <ComboBox fx:id="accountComboBox" prefWidth="300.0"/>
            <ComboBox fx:id="transactionTypeComboBox" prefWidth="300.0"/>
        </HBox>

        <!-- Account-based transactions section -->
        <VBox spacing="10">
            <Label text="Transactions by Selected Account" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <TableView fx:id="accountTransactionsTable" prefHeight="255.0" prefWidth="1050.0" style="-fx-border-color: black;">
                <columns>
                    <TableColumn fx:id="accTransAccountCol" text="Account" prefWidth="175.0"/>
                    <TableColumn fx:id="accTransDateCol" text="Date" prefWidth="150.0"/>
                    <TableColumn fx:id="accTransDescriptionCol" text="Description" prefWidth="300.0"/>
                    <TableColumn fx:id="accPaymentAmountCol" text="Payment Amount" prefWidth="150.0"/>
                    <TableColumn fx:id="accDepositAmountCol" text="Deposit Amount" prefWidth="150.0"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <!-- Transaction-type-based transactions section -->
        <VBox spacing="10">
            <Label text="Transactions by Selected Transaction Type" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <TableView fx:id="typeTransactionsTable" prefHeight="255.0" prefWidth="1050.0" style="-fx-border-color: black;">
                <columns>
                    <TableColumn fx:id="typeTransTypeCol" text="Transaction Type" prefWidth="175.0"/>
                    <TableColumn fx:id="typeTransDateCol" text="Date" prefWidth="150.0"/>
                    <TableColumn fx:id="typeTransDescriptionCol" text="Description" prefWidth="300.0"/>
                    <TableColumn fx:id="typePaymentAmountCol" text="Payment Amount" prefWidth="150.0"/>
                    <TableColumn fx:id="typeDepositAmountCol" text="Deposit Amount" prefWidth="150.0"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>
</AnchorPane>
